<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContextFragment">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/avatar_view"
        android:layout_width="57dp"
        android:layout_height="59dp"
        android:layout_alignTop="@+id/title_view"
        android:layout_marginEnd="-121dp"
        android:layout_toStartOf="@+id/title_view" />

    <TextView
        android:id="@+id/conetxt_view"
        android:layout_width="294dp"
        android:layout_height="352dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_view"
        android:layout_marginStart="66dp" />

    <ImageView
        android:id="@+id/like_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/conetxt_view"
        android:layout_toStartOf="@+id/like_num_view" />

    <TextView
        android:id="@+id/like_num_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/conetxt_view"
        android:layout_below="@+id/conetxt_view" />

</RelativeLayout>